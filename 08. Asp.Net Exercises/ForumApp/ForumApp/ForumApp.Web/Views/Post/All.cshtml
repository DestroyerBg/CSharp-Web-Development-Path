@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ForumApp.ViewModels.PostModels.ExportPostViewModel>

@{
    ViewBag.Title = "All Posts";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="d-grid gap-2 mb-2">
    <a asp-controller="Post" asp-action="Add" class="btn btn-primary">Add Post</a>
</div>


@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-sm-6" style="margin-bottom:25px;">
                <div class="card ">
                    <div class="card-body">
                        <h4 class="card-title text-center">@post.Title</h4>
                        <p class="card-text">@post.Content</p>
                        <div class="d-grid gap-2 mb-2">
                            <a asp-controller="Post" asp-action="Edit" asp-route-postId="@post.Id" class="btn btn-warning">Edit</a>
                            <a asp-controller="Post" asp-action="Delete" asp-route-postId="@post.Id" class="btn btn-danger" onclick="return confirm('Наистина ли желаете да изтриете този пост?')">Delete</a>
                            <a asp-controller="Post" asp-action="LoadComments" asp-route-postId="@post.Id" class="btn btn-info">Load Comments</a>
                        </div>

                    </div>
                </div>
            </div>

        }
    </div>
}
else
{
    <p class="text-center">No posts yet!</p>
}

