@model CinemaApp.Data.Models.Movie


<h2>Edit an movie "@Model.Title"</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="@Model.Id"/>
    <div>
        <label for="Name">Movie Name</label>
        <input asp-for="Title" class="form-control"/>
    </div>
    <div>
        <label for="Genre">Genre</label>
        <input asp-for="Genre" class="form-control"/>
    </div>
    <div>
        <label for="ReleaseDate">Release Date</label>
        <input asp-for="ReleaseDate" type="month" class="form-control"/>
    </div>
    <div>
        <label for="Duration">Duration (minutes)</label>
        <input asp-for="Duration" class="form-control"/>
    </div>
    <div>
        <label for="Director">Director</label>
        <input asp-for="Director" class="form-control"/>
    </div>
    <div>
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Edit Movie</button>
</form>

<a asp-action="AllMovies" class="btn btn-secondary" style="margin-top: 1em;">Back to Movies List</a>
